---

<!-- <script src="../effects/Theatre"></script> -->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,
    initial-scale=1" />
    <title>The portfolio of Jeff Miller</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Newsreader&display=swap');
    </style>
    <!-- <ViewTransitions /> -->
    <script>
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)')

      if (prefersDark) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.add('light')
      }
    </script>
  </head>
  <body class="loading">
    <!-- <Header transition:name="header" /> -->
    <main>
      <slot />
    </main>
    <!-- <Footer /> -->
  </body>
</html>

<script>
  import { preloadImages } from '../effects/utils'

  await preloadImages(document.querySelectorAll('.link'))

  document.body.classList.remove('loading')
</script>

<style>
  body,
  html,
  main {
    position: relative;
    height: 100%;
    width: 100%;
  }

  /* Page Loader */
  .loading::before,
  .loading::after {
    content: '';
    position: fixed;
    z-index: 1000;
  }

  .loading::before {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--surface-1);
  }

  .loading::after {
    top: 50%;
    left: 50%;
    width: 60px;
    height: 60px;
    margin: -30px 0 0 -30px;
    border-radius: 50%;
    opacity: 0.4;
    background: var(--accent);
    animation: loaderAnim 0.6s ease-in infinite alternate forwards;
  }

  @keyframes loaderAnim {
    to {
      opacity: 1;
      transform: scale3d(0.5, 0.5, 1);
    }
  }
</style>

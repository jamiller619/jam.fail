---
import { getCollection, type CollectionEntry } from 'astro:content'
import ProjectCard from './ProjectCard.astro'
import HoverCard from './HoverCard.astro'
import AppearTransition from './AppearTransition.astro'
import { gsap } from 'gsap'

const data = await getCollection('projects')

type Project = CollectionEntry<'projects'>

function sortProjects(a: Project, b: Project) {
  return b.data.date.getTime() - a.data.date.getTime()
}

const empty = new Array(data.length).fill(null)
const projects = gsap.utils.shuffle(data.concat(empty))
---

<AppearTransition class="grid">
  {
    projects.map((project) => {
      return project == null ? (
        <div />
      ) : (
        <HoverCard>
          <ProjectCard {...project.data} />
        </HoverCard>
      )
    })
  }
</AppearTransition>

<style>
  .grid {
    position: absolute;
    width: 100%;
    height: 100%;
    inset: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(20%, 1fr));
    grid-template-rows: repeat(auto-fit, 20%);
    /* grid-template-rows: minmax(1px, auto); */
    gap: var(--size-10);
    perspective: 1000px;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }
</style>
